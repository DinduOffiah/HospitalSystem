@model IEnumerable<Test.Models.Student>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" asp-controller="Students" method="get">
    <div class="input-group">
        <input type="text" name="query" class="form-control" placeholder="Search this blog">
            <button class="btn btn-secondary" type="submit">
                <i class="fa fa-search"></i>
            </button>
    </div>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src=""> @Html.DisplayFor(modelItem => item.RegNo)
            </td>
                <td>
                    @if (item.Photo != null && item.Photo.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" alt="Student Image" style="width: 100px; height: 100px;"  />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegNo">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.RegNo">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
